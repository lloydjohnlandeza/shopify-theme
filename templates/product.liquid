<div class="md:grid md:grid-cols-2 max-w-7xl mx-auto md:py-24 md:px-4 gap-5">
  <product-showcase product_images="{{product.images}}">
    <div>
      <div class="relative w-full grid h-80 md:h-auto md:max-w-[450px] md:gap-4 md:aspect-square md:mx-auto md:rounded-lg items-center">
        <button id="previous" class="md:hidden z-10 absolute ml-4 flex h-10 w-10 items-center justify-center self-center justify-self-start rounded-full bg-my-white text-my-very-dark-blue">
          <base-icons icon_name="previous"></base-icons>
        </button>
        {% for image in product.images %}
          <img
            src="{{ image | image_url: height: 800 }}"
            class="transition duration-500 ease-in-out absolute opacity-0 left-0 right-0 top-0 bottom-0 h-full w-full object-cover"
            data-display-id="{{ forloop.index | minus: 1 }}"
            loading="lazy"
            alt="{{product.alt}}">
        {% endfor %}
        <button id="next" class="md:hidden z-10 absolute mr-4 flex h-10 w-10 items-center justify-center self-center justify-self-end rounded-full bg-my-white text-my-very-dark-blue">
          <base-icons icon_name="next"></base-icons>
        </button>
      </div>
      <div class="md:grid grid-cols-4 max-w-[450px] mx-auto mt-8 gap-5 items-center justify-between hidden">
        {% for image in product.images %}
          <div data-thumbnail-id="{{ forloop.index | minus: 1 }}" class="hover:border-my-orange hover:border-2 rounded-lg border-2 border-my-white overflow-hidden">
            <img
              src="{{ image | image_url: height: 100 }}"
              class="cursor-pointer transition duration-500 ease-in-out object-cover max-w-[96px] w-full aspect-square filter opacity-50 hover:filter hover:opacity-50"
              loading="lazy"
              alt="{{product.alt}}">
          </div>
        {% endfor %}
      </div>
    </div>
  </product-showcase>
  <dialog id="lightbox" class="backdrop:bg-my-black backdrop:bg-opacity-75 h-full w-full bg-transparent max-w-[100vw]">
    <product-showcase
      active="0"
      class="min-h-full h-auto w-full flex flex-col justify-center"
      product_images="{{product.images}}">
      <div class="relative w-full grid h-auto max-w-[450px] gap-4 aspect-square mx-auto rounded-lg items-center">
        <form method="dialog">
          <button id="close" class="absolute text-my-light-grayish-blue -top-5 right-0 z-10">
            <base-icons icon_name="close"></base-icons>
          </button>
        </form>
        <button id="previous" class="z-10 absolute md:-ml-8 -ml-2 flex h-10 w-10 items-center justify-center self-center justify-self-start rounded-full bg-my-white text-my-very-dark-blue">
          <base-icons icon_name="previous"></base-icons>
        </button>
        {% for image in product.images %}
          <img
            src="{{ image | image_url: height: 800 }}"
            class="my-auto transition duration-500 ease-in-out absolute opacity-0 left-0 right-0 top-0 bottom-0 h-auto w-full rounded-lg"
            data-display-id="{{ forloop.index | minus: 1 }}"
            loading="lazy"
            alt="{{product.alt}}">
        {% endfor %}
        <button id="next" class="z-10 absolute md:-mr-8 -mr-2 flex h-10 w-10 items-center justify-center self-center justify-self-end rounded-full bg-my-white text-my-very-dark-blue">
          <base-icons icon_name="next"></base-icons>
        </button>
      </div>
      <div class="grid grid-cols-4 max-w-[450px] mx-auto mt-8 gap-5 items-center justify-between">
        {% for image in product.images %}
          <div data-thumbnail-id="{{ forloop.index | minus: 1 }}" class="hover:border-my-orange hover:border-2 rounded-lg border-2 border-my-white overflow-hidden">
            <img
              src="{{ image | image_url: height: 100 }}"
              class="cursor-pointer transition duration-500 ease-in-out object-cover max-w-[96px] w-full aspect-square filter opacity-50 hover:filter hover:opacity-50"
              loading="lazy"
              alt="{{product.alt}}">
          </div>
        {% endfor %}
      </div>
    </product-showcase>
  </dialog>
  <product-form class="md:mt-10">
    {% form 'product', product %}
      <div class="m-4 md:max-w-[450px]">
        <h6 class="text-sm mb-2 font-bold text-my-orange">SNEAKER COMPANY</h6>
        <h1 class="text-3xl font-bold text-my-very-dark-blue md:text-4xl">{{ product.title }}</h1>
        <p class="mt-4 md:mt-12 text-my-dark-grayish-blue">
          {{ product.description | strip_html }}
        </p>
        <div class="my-6 flex items-center md:inline-grid md:grid-cols-[auto_auto]">
          <h6 class="text-3xl font-bold">{{ product.price | money }}</h6>
          <span class="mx-4 rounded-md bg-my-pale-orange px-2 py-1 font-bold text-my-orange">
            {% assign regularPrice = product.compare_at_price | divided_by: 1 %}
            {% assign salePrice = product.price | divided_by: 1 %}

            {% if regularPrice and salePrice %}
              {% assign percentage = regularPrice | minus: salePrice | times: 100 | divided_by: regularPrice %}
              {{ percentage | round: 2 }}%
            {% endif %}
          </span>
          <span class="ml-auto md:ml-0 md:mb-4 text-lg font-bold text-my-grayish-blue line-through">
            {{ product.compare_at_price | money }}
          </span>
        </div>
        {% if product.variants.size == 1 %}
          <input
            type="hidden"
            name="id"
            value="{{product.variants[0].id}}" />
        {% elsif product.variants.size > 1 %}
          <label for="variants" class="block mb-2 text-sm font-bold text-my-very-dark-blue">Options</label>
          <select
            id="variants"
            name="id"
            class="block w-full p-2 py-4 mb-4 text-my-very-dark-blue border rounded-md bg-my-light-grayish-blue focus:ring-blue-500 focus:border-blue-500">
            {% for variant in product.variants %}
              <option value="{{ variant.id }}" {% if variant == product.selected_or_first_available_variant %}selected="selected"{% endif %}>
                {{ variant.title }} - {{ variant.price | money }}
              </option>
            {% endfor %}
          </select>
        {% endif %}
        <div class="grid grid-cols-1 sm:grid-cols-[1fr_1.5fr] gap-4 items-center rounded-md">
          <div class="grid grid-cols-[auto_1fr_auto] h-full">
            <button
              id="decrement"
              type="button"
              class="h-full rounded-r-none rounded-lg bg-my-light-grayish-blue p-5 text-my-orange justify-self-start">
              <base-icons icon_name="minus"></base-icons>
            </button>
            <span class="flex h-full items-center justify-center bg-my-light-grayish-blue text-center font-bold">
              <input
                class="w-full bg-transparent text-center"
                readonly
                type="text"
                name="quantity"
                min="1"
                value="1">
            </span>
            <button
              id="increment"
              type="button"
              class="h-full rounded-l-none rounded-lg bg-my-light-grayish-blue p-5 text-my-orange justify-self-end">
              <base-icons icon_name="plus"></base-icons>
            </button>
          </div>
          <button type="submit" class="flex items-center justify-center gap-4 rounded-lg bg-my-orange p-4 font-bold text-my-white">
            <base-icons icon_name="cart"></base-icons>
            <span>Add to cart</span>
          </button>
        </div>
      </div>
    {% endform %}
  </product-form>
</div>

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>