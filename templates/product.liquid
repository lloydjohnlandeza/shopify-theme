<div class="pb-96">
  <div class="relative grid h-80 items-center overflow-hidden">
    <button class="absolute ml-4 flex h-10 w-10 items-center justify-center self-center justify-self-start rounded-full bg-my-white text-my-very-dark-blue">
      <svg width="12" height="18" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M11 1 3 9l8 8"
          stroke="currentColor"
          stroke-width="3"
          fill="none"
          fill-rule="evenodd"
        />
      </svg>
    </button>
    <img class="h-full w-full object-cover" src="{{ 'image-product-1.jpg' | asset_url}}">
    <button class="absolute mr-4 flex h-10 w-10 items-center justify-center self-center justify-self-end rounded-full bg-my-white text-my-very-dark-blue">
      <svg width="13" height="18" xmlns="http://www.w3.org/2000/svg">
        <path
          d="m2 1 8 8-8 8"
          stroke="currentColor"
          stroke-width="3"
          fill="none"
          fill-rule="evenodd"
        />
      </svg>
    </button>
  </div>
  <product-form>
    {% form 'product', product %}
      <div class="m-4">
        <h6 class="text-sm- mb-2 font-bold text-my-orange">SNEAKER COMPANY</h6>
        <h1 class="text-3xl font-bold text-my-very-dark-blue">{{ product.title }}</h1>
        <p class="mt-4 text-my-dark-grayish-blue">
          {{ product.description | strip_html }}
        </p>
        <div class="my-6 flex items-center">
          <h6 class="text-3xl font-bold">{{ product.price | money }}</h6>
          <span class="mx-4 rounded-md bg-my-pale-orange px-2 py-1 font-bold text-my-orange">
            {% assign regularPrice = product.compare_at_price | divided_by: 1 %}
            {% assign salePrice = product.price | divided_by: 1 %}

            {% if regularPrice and salePrice %}
              {% assign percentage = regularPrice | minus: salePrice | times: 100 | divided_by: regularPrice %}
              {{ percentage | round: 2 }}%
            {% endif %}
          </span>
          <span class="ml-auto text-lg font-bold text-my-dark-grayish-blue line-through">
            {{ product.compare_at_price | money }}
          </span>
        </div>
        <select name="id">
          {% for variant in product.variants %}
            <option
              value="{{ variant.id }}"
              {% if variant == product.selected_or_first_available_variant %}
                selected="selected"
              {% endif %}
            >
              {{ variant.title }} - {{ variant.price | money }}
            </option>
          {% endfor %}
        </select>
        <div class="grid grid-cols-[auto_1fr_auto] items-center rounded-md">
          <button type="button" class="rounded-lg bg-my-light-grayish-blue p-5 text-my-orange justify-self-start">
            <svg
              width="12"
              height="4"
              xmlns="http://www.w3.org/2000/svg"
              xmlns:xlink="http://www.w3.org/1999/xlink"
            >
              <defs>
                <path
                  d="M11.357 3.332A.641.641 0 0 0 12 2.69V.643A.641.641 0 0 0 11.357 0H.643A.641.641 0 0 0 0 .643v2.046c0 .357.287.643.643.643h10.714Z"
                  id="a"
                />
              </defs>
              <use fill="currentColor" fillRule="nonzero" xlink:href="#a" />
            </svg>
          </button>
          <span class="flex h-full items-center justify-center bg-my-light-grayish-blue text-center font-bold">
            <input class="w-full bg-transparent text-center" readonly type="text" name="quantity" min="1" value="1">
          </span>
          <button type="button" class="justify-self-end rounded-lg bg-my-light-grayish-blue p-5 text-my-orange">
            <svg width="12" height="12" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
              <defs>
                <path
                  d="M12 7.023V4.977a.641.641 0 0 0-.643-.643h-3.69V.643A.641.641 0 0 0 7.022 0H4.977a.641.641 0 0 0-.643.643v3.69H.643A.641.641 0 0 0 0 4.978v2.046c0 .356.287.643.643.643h3.69v3.691c0 .356.288.643.644.643h2.046a.641.641 0 0 0 .643-.643v-3.69h3.691A.641.641 0 0 0 12 7.022Z" id="b"/>
              </defs>
              <use fill="currentColor" fill-rule="nonzero" xlink:href="#b"/>
            </svg>
          </button>
          <button
            type="submit"
            class="col-span-full mt-4 flex items-center justify-center gap-4 rounded-lg bg-my-orange p-5 font-bold text-my-white"
          >
            <svg width="22" height="20" xmlns="http://www.w3.org/2000/svg">
              <path d="M20.925 3.641H3.863L3.61.816A.896.896 0 0 0 2.717 0H.897a.896.896 0 1 0 0 1.792h1l1.031 11.483c.073.828.52 1.726 1.291 2.336C2.83 17.385 4.099 20 6.359 20c1.875 0 3.197-1.87 2.554-3.642h4.905c-.642 1.77.677 3.642 2.555 3.642a2.72 2.72 0 0 0 2.717-2.717 2.72 2.72 0 0 0-2.717-2.717H6.365c-.681 0-1.274-.41-1.53-1.009l14.321-.842a.896.896 0 0 0 .817-.677l1.821-7.283a.897.897 0 0 0-.87-1.114ZM6.358 18.208a.926.926 0 0 1 0-1.85.926.926 0 0 1 0 1.85Zm10.015 0a.926.926 0 0 1 0-1.85.926.926 0 0 1 0 1.85Zm2.021-7.243-13.8.81-.57-6.341h15.753l-1.383 5.53Z" fill="currentColor" fill-rule="nonzero"/>
            </svg>
            <span>Add to cart</span>
          </button>
        </div>
      </div>
    {% endform %}
  </product-form>
</div>

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
